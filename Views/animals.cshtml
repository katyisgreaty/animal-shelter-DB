@if (@Model.Count == 0)
{
  <p>No animals have been added yet!</p>
}
else
{
  <h1>Here is your list of animals:</h1>
  <ul>
    @foreach (var animal in Model)
    {
      <li>@animal.GetName(), @animal.GetBreed(), @animal.GetGender(), @animal.GetDate()</li>
    }
  </ul>
  <form action="/animals/sort" method="post">
    <button type="submit">Sort animals by date they came to this wonderful shelter</button>
  </form>
  <form action="/animals/delete" method="post">
    <button type="submit">Adopt all animals</button>
  </form>
}
<p><a href="/animals/new">Add a new animal</a></p>
<p><a href="/">Return home</a></p>
